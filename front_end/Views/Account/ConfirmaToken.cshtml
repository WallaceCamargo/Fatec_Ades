@model front_end.Models.UsuarioViewModel


<div class="authentication-bg min-vh-100">
    <div class="bg-overlay bg-light"></div>
    <div class="container">
        <div class="d-flex flex-column min-vh-100">
            <div class="row justify-content-center my-auto">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-5">
                        <div class="card-body">
                            <div class="p-3">

                                <div class="mb-4 text-center">
                                    <h5 class="mb-1">Verifique seu Email</h5>
                                    <p class="text-muted">Por favor preencha os campos com o Token enviado para o seu email</p>
                                </div>
                                <div class="form">


                                    <div class="row">
                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit1-input" class="visually-hidden">Dight 1</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 2)" maxlength="1" id="digit1-input2">
                                            </div>
                                        </div><!-- end col -->

                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit1-input" class="visually-hidden">Dight 2</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 3)" maxlength="1" id="digit2-input2">
                                            </div>
                                        </div><!-- end col -->

                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit1-input" class="visually-hidden">Dight 3</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 4)" maxlength="1" id="digit3-input2">
                                            </div>
                                        </div><!-- end col -->

                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit2-input" class="visually-hidden">Dight 4</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 5)" maxlength="1" id="digit4-input2">
                                            </div>
                                        </div><!-- end col -->

                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit3-input" class="visually-hidden">Dight 5</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 6)" maxlength="1" id="digit5-input2">
                                            </div>
                                        </div><!-- end col -->

                                        <div class="col-2">
                                            <div class="mb-3">
                                                <label for="digit4-input" class="visually-hidden">Dight 6</label>
                                                <input type="text" class="form-control form-control-lg text-center"
                                                       onkeyup="moveToNext2(this, 6)" maxlength="1" id="digit6-input2">
                                            </div>
                                        </div><!-- end col -->
                                    </div><!-- end row -->
                                    @*                                    <input type="hidden" asp-for="TokensendEmail" id="tokenemail" />
                                    <input type="hidden" asp-for="Email" />
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="Username" />
                                    <input type="hidden" asp-for="CPF" />
                                    <input type="hidden" asp-for="Password" />*@
                                    <form asp-action="AlteraSenha">
                                        <input type="hidden" value="v-" id="tokenConfirmed" />
                                        <input type="hidden" asp-for="TokensendEmail" id="tokenAlteraSenha" />

                                        <div class="form-group">
                                            <input type="submit" value="Deletar" class="btn btn-danger" />
                                            <a asp-action="Index" class="btn btn-info">Retornar</a>
                                        </div>
                                    </form>
                                    <div class="row justify-content-center">
                                        <div class="col-sm-4 text-center">
                                            <button class="btn btn-primary rounded-pill w-100">Confirmar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- end card-body -->

                    </div><!-- end card -->
                    <div class="mt-3 text-center text-muted">
                        <p class="mb-0">
                            não recebeu o Token ? <a href="auth-signup.html" class="fw-medium">
                                enviar novamente
                            </a>
                        </p>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->

            <div class="row">
                <div class="col-xl-12">
                    <div class="text-center text-muted p-4">
                        <p class="mb-0">
                            ©
                            <script>document.write(new Date().getFullYear())</script> Ecoporto Santos <i class="mdi mdi-heart text-danger"></i> by Wallace Camargo
                        </p>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->

        </div>
    </div><!-- end container -->
</div>
<!-- end authentication section -->
<style>
    header {
        display: none;
    }
</style>