@model front_end.Models.UsuarioViewModel


<div class="authentication-bg min-vh-100">
    <div class="bg-overlay bg-light"></div>
    <div class="container">
        <div class="d-flex flex-column min-vh-100">
            <div class="row justify-content-center my-auto">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-5">
                        <div class="card-body">
                            <div class="p-3">
                                <div class="mb-3 text-center mb-md-4">
                                    <a href="index.html" class="d-block auth-logo">
                                        <img src="assets/images/logo-dark.png" alt="" height="22"
                                             class="auth-logo-dark">
                                        <img src="assets/images/logo-light.png" alt="" height="22"
                                             class="auth-logo-light">
                                    </a>
                                </div>
                                <div class="mb-4 text-center">
                                    <h5 class="mb-1">Restaurar Senha</h5>
                                    @*<p class="text-muted"></p>*@
                                </div>
                                <div class="alert alert-info text-center mb-4" role="alert">
                                    Digite seu e-mail e as instruções serão enviadas para você!
                                </div>
                                <form class="form-horizontal mt-3" asp-controller="Account" asp-action="RecuperaSenha">
                                    <div class="mb-3">
                                        <input type="text" asp-for="Email" class="form-control" id="emailID"
                                               placeholder="Enter Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                

                                    <div class="row justify-content-center">
                                        <div class="col-sm-4 text-center">
                                            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-info w-100 rounded-pill">Retornar</a>
                                        </div>
                                        <div class="col-sm-4 text-center">
                                            <button class="btn btn-primary w-100 rounded-pill" type="submit">Enviar Token</abutton>
                                        </div>
                                    </div><!-- end row -->
                                </form><!-- end -->
                            </div>
                        </div><!-- end card-body -->

                    </div><!-- end card -->
                </div><!-- end col -->
            </div><!-- end row -->

            <div class="row">
                <div class="col-xl-12">
                    <div class="text-center text-muted p-4">
                        <p class="mb-0">
                            ©
                            <script>document.write(new Date().getFullYear())</script> Ecoporto Santos <i class="mdi mdi-heart text-danger"></i> by Wallce Camargo
                        </p>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
        </div>
    </div><!-- end container -->
</div>

<style>
    header {
        display: none;
    }
</style>